/* Cooley-Tukey Radix-2 DIT Algorithm */

decl inp: ubit<32>[32];
decl prime: ubit<32>[1];
decl omegas: ubit<32>[32];
decl ret: ubit<32>[32];  // Output array.

let P = prime[0];
let N: ubit<6> = 32;
let log2N: ubit<6> = 5;

---

let idx: ubit<6> = 0;
while (idx < N) {
  ret[idx] := inp[idx];
  ---
  idx := idx + 1;
}

---

idx := 0;
let one: ubit<6> = 1;
while (idx < N) {
  let rev_idx: ubit<6> = 0;
  ---
  let j: ubit<6> = 0;
  while (j < log2N) {
    // Reverse `idx`.
    rev_idx := rev_idx | (((idx >> j) & (1 as ubit<6>)) << ((log2N - 1) - j));
    ---
    j := j + 1;
  }
  if (rev_idx > idx) {
    // Swap `ret[idx]`, `ret[rev_idx]`.
    let temp: ubit<32> = ret[idx];
    ---
    ret[idx] := ret[rev_idx];
    ---
    ret[rev_idx] := temp;
  }
  ---
  idx := idx + 1;
}

---

let mIndex: ubit<6> = 2;
let iters: ubit<6> = 0;

---

while (iters < log2N) {
  let i: ubit<6> = 0;
  let stopIndex: ubit<6> = N / mIndex;
  let mHalved: ubit<6> = mIndex >> 1;
  while (i < stopIndex) {
    let oidx: ubit<6> = 0;
    let iStep: ubit<6> = i * mIndex;
    let j: ubit<6> = 0;
    while (j < mHalved) {
      let k: ubit<6> = iStep + j;
      let U: ubit<32> = ret[k];
      ---
      let V: ubit<32> = ret[k + mHalved] * omegas[oidx];
      ---
      ret[k] := (U + V) % P;
      ---
      ret[k + mHalved] := (U - V) % P;
      oidx := oidx + stopIndex;
      j := j + 1;
    }
    i := i + 1;
  }
  mIndex := mIndex << 1;
  iters := iters + 1;
}

